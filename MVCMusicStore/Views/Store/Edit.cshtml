@model MVCMusicStore.Models.Album

@{
    ViewBag.Title = "title";
    Layout = "/Views/Shared/_Layout.cshtml";
}


<h2>Edit Album</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(u => u.AlbumId)
    <div class="form-group">
        <h3>@Html.DisplayNameFor(u => u.Title)</h3>
        <h3>@Html.EditorFor(u => u.Title)</h3>
    </div>

    <div class="form-group">
        <h3>@Html.DisplayNameFor(u => u.Artist)</h3>
        <h3>@Html.EditorFor(u => u.Artist)</h3>
    </div>


    <div class="form-group">
        <h3>@Html.DisplayNameFor(u => u.Genre)</h3>
        <h3>@Html.EnumDropDownListFor(u => u.Genre)</h3>
    </div>

    <div class="form-group">
        <h3>@Html.DisplayNameFor(u => u.Artist)</h3>
        <h3>@Html.EditorFor(u => u.Artist)</h3>
    </div>

    <div id="form-group">
        <input type="submit" value="Save" class="btn btn-default"/>
    </div>
}