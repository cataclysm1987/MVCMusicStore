@using System.Web.Mvc.Html
@model MVCMusicStore.Models.Album

@{
    ViewBag.Title = "title";
    Layout = "/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h2>Create Album</h2>
    <div class="form-group">
        <h3>@Html.DisplayNameFor(u => u.Title)</h3>
        <h3>@Html.EditorFor(u => u.Title)</h3>
    </div>

    <div class="form-group">
        <h3>@Html.DisplayNameFor(u => u.Artist)</h3>
        <h3>@Html.DropDownListFor(u => u.Artist)</h3>
    </div>


    <div class="form-group">
        <h3>@Html.DisplayNameFor(u => u.Genre)</h3>
        <h3>@Html.EnumDropDownListFor(u => u.Genre)</h3>
    </div>

    <div class="form-group">
        <h3>@Html.DisplayNameFor(u => u.AlbumArtUrl)</h3>
        <h3>@Html.EditorFor(u => u.AlbumArtUrl)</h3>
    </div>

    <div id="form-group">
        <input type="submit" value="Create" class="btn btn-default"/>
    </div>
}