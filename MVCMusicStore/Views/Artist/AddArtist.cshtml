@model MVCMusicStore.Models.Artist

@{
    ViewBag.Title = "title";
    Layout = "/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Create Album</h2>
    <div class="form-group">
        <h3>@Html.DisplayNameFor(model => model.Name)</h3>
        <h3>@Html.EditorFor(Model => Model.Name)</h3>
    </div>

    <div class="form-group">
        <h3>@Html.DisplayNameFor(u => Model.Description)</h3>
        <h3>@Html.EditorFor(u => Model.Description)</h3>
    </div>




    <div id="form-group">
        <input type="submit" value="Create" class="btn btn-default"/>
    </div>
}
